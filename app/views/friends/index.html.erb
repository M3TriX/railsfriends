
<% if user_signed_in? %>
  <h1>Friend List</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <div id="friends">
        <% @friends.each do |friend| %>
          <% if friend.user_id == current_user.id %>
          <tr>
            <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger btn-sm" %></td>  
          </tr>
          <% end %>
        <% end %>
      </div>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path,class:"btn btn-secondary" %>
<% else %>
  <h1>Hello world!</h1>
  <p>This is my first Rails webpage...</p>
<% end %>